{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"pages/login.jsx",
		"components/Layout.jsx",
		"pages/_app.jsx",
		"pages/index.jsx",
		"utils/data.js",
		"utils/db.js",
		"pages/search.jsx",
		"pages/users/upload.jsx",
		"pages/api/users/upload.js"
	],
	"exclude": ["node_modules"]
}
